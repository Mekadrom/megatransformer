{
    "train_batch_size": "auto",
    "train_micro_batch_size_per_gpu": "auto",
    "gradient_accumulation_steps": "auto",
    
    "optimizer": {
        "type": "AdamW",
        "params": {
            "lr": "auto",
            "betas": [0.9, 0.999],
            "eps": 1e-8,
            "weight_decay": "auto"
        }
    },
    
    "scheduler": {
        "type": "WarmupDecayLR",
        "params": {
            "warmup_min_lr": 0,
            "warmup_max_lr": "auto",
            "warmup_num_steps": "auto",
            "total_num_steps": "auto"
        }
    },
    
    "zero_optimization": {
        "stage": 3,
        "offload_optimizer": {
            "device": "cpu",
            "pin_memory": true
        },
        "offload_param": {
            "device": "cpu",
            "pin_memory": true
        },
        "overlap_comm": true,
        "contiguous_gradients": true,
        "sub_group_size": 1e9,
        "reduce_bucket_size": "auto",
        "stage3_prefetch_bucket_size": "auto",
        "stage3_param_persistence_threshold": "auto"
    },
    
    "bf16": {
        "enabled": "auto"
    },
    
    "quantization": {
        "enabled": true,
        "quantize_training": true,
        "quantize_weights": true,
        "quantize_activations": true,
        "quantizer": {
            "quantize_policy": {
                "policy_name": "static"
            },
            "activation_quantizer": {
                "symmetric": true,
                "num_bits": 8
            },
            "weight_quantizer": {
                "symmetric": true,
                "num_bits": 8
            }
        }
    },
    
    "gradient_clipping": "auto",
    "steps_per_print": 100,
    "wall_clock_breakdown": false
}
